[Unit]
Description=Host runner
ConditionPathExists=/home/ubuntu/.config/runner
After=network.target

[Service]
Type=simple
User=1000
Group=10000
LimitNOFILE=1024

Restart=on-failure
RestartSec=10
Environment="OX_WAPI_URI=http://localhost:8080"
Environment="OX_WAPI_PWD=M3If3q0Grn48mtC0123"
Environment="OX_WAPI_USER=admin"
Environment="OX_WAPI_INSECURE_SKIP_VERIFY=true"
Environment="OX_HTTP_PORT="

Environment="OX_MSGBROKER_INSECURE_SKIP_VERIFY="
Environment="OX_MSGBROKER_TOPIC="
Environment="OX_MSGBROKER_QoS="
Environment="OX_MSGBROKER_URI="

WorkingDirectory=/home/ubuntu/.config/runner
ExecStart=/home/ubuntu/.config/runner/host-runner

[Install]
WantedBy=multi-user.target
